<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wifood">
    <!-- 위치 추적 기능 권한 설정 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Wifood">
        <activity
            android:name=".activity.AddWishList"
            android:exported="false" />
        <activity
            android:name=".activity.SearchPlace"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.WishList"
            android:exported="false" />
        <activity
            android:name=".activity.WishGroup"
            android:exported="false" />
        <activity
            android:name=".activity.Map"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.GroupSelect"
            android:exported="false" />
        <activity
            android:name=".activity.DeleteFoodGroup"
            android:exported="false" />
        <activity
            android:name=".activity.EditFoodGroup"
            android:exported="false" />
        <activity
            android:name=".activity.FoodGroup"
            android:exported="false" /> <!-- 네이버 지도 api 인증키 -->
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="28l8cj5f00" />
    </application>

</manifest>