<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ModifyPassword"
    android:onClick="hideKeyboard"
    >

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_arrow" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/pbold"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lineTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="48dp"
        android:background="@color/enable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Text1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="새로운 비밀번호를 입력해주세요"
        android:textColor="#424242"
        android:textSize="15sp"
        android:fontFamily="@font/pbold"
        app:layout_constraintTop_toBottomOf="@+id/lineTop"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/Text2"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:text="영문, 숫자를 포함한 8자 이상의 비밀번호를 입력해주세요"
        android:textColor="@color/gray01"
        android:textSize="12sp"
        android:fontFamily="@font/pregular"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="@color/gray01"
        android:textSize="14sp"
        tools:ignore="TouchTargetSizeCheck"
        android:cursorVisible="false"
        style="@style/EditTextStyle"
        app:theme="@style/EditTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/Text2"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <TextView
        android:id="@+id/Text3"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="새로운 비밀번호를 입력해주세요"
        android:textColor="#424242"
        android:textSize="15sp"
        android:fontFamily="@font/pbold"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/editTextPasswordCheck"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:password="true"
        android:textColor="@color/gray01"
        android:textSize="14sp"
        tools:ignore="TouchTargetSizeCheck"
        android:cursorVisible="false"
        style="@style/EditTextStyle"
        app:theme="@style/EditTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/Text3"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonModifyPassword"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_loginrectangle"
        android:fontFamily="@font/pbold"
        android:text="비밀번호 변경하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />



</androidx.constraintlayout.widget.ConstraintLayout>