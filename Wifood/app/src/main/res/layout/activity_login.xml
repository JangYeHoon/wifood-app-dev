<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login">

    <Button
        android:id="@+id/btnGoHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="28dp"
        android:enabled="true"
        android:text="로그인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoJoinIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="42dp"
        android:text="회원가입"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnFindPwd"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="66dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextId"
        app:layout_constraintEnd_toEndOf="@+id/editTextId"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <Button
        android:id="@+id/btnFindPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:text="비밀번호 찾기"
        app:layout_constraintStart_toEndOf="@+id/btnGoJoinIn"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <Button
        android:id="@+id/button4"
        android:layout_width="215dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:text="Naver Login"
        app:layout_constraintEnd_toStartOf="@+id/btnFindPwd"
        app:layout_constraintStart_toStartOf="@+id/btnFindPwd"
        app:layout_constraintTop_toBottomOf="@+id/btnFindPwd" />

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="179dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="xxx@xxx.com"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textSize="15"
        app:layout_constraintBottom_toTopOf="@+id/btnGoHomeButton"
        app:layout_constraintEnd_toStartOf="@+id/btnGoHomeButton"
        app:layout_constraintTop_toTopOf="@+id/btnGoHomeButton"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:ems="10"
        android:hint="특수문자 2자리 포함, 8~15자"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:password="true"
        android:textSize="15"
        app:layout_constraintEnd_toStartOf="@+id/btnGoHomeButton"
        app:layout_constraintTop_toTopOf="@+id/btnGoHomeButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="196dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="253dp" />

</androidx.constraintlayout.widget.ConstraintLayout>