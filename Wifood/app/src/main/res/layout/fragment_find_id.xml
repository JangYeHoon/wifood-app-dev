<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="1000dp">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="#424242"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="57dp" />

    <EditText
        android:id="@+id/editTextTextPersonName11"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:textColor="#C4C4C4"
        android:textColorHint="@color/enable"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인 인증"
        android:textColor="#424242"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/editTextTextPersonName12"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="인증번호 입력 (3분 이내)"
        android:inputType="textPersonName"
        android:textColor="#C4C4C4"
        android:textColorHint="@color/enable"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName13"
        tools:layout_editor_absoluteX="31dp" />

    <EditText
        android:id="@+id/editTextTextPersonName13"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="휴대폰번호 ('-' 제외)"
        android:inputType="textPersonName"
        android:textColor="#C4C4C4"
        android:textColorHint="@color/enable"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:layout_editor_absoluteX="31dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="78dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_grayrectangle"
        android:text="인증번호 받기"
        android:textColor="#999999"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName13"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName13" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/btn_loginrectangle"
        android:text="아이디 찾기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>