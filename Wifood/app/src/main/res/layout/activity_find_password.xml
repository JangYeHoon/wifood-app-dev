<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FindPassword">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="69dp"
        android:text="비밀번호 찾기"
        app:layout_constraintEnd_toEndOf="@+id/editTextFindPasswordEmail"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFindPasswordEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:hint="xxx@xxx.com"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextFindPasswordNickname"
        app:layout_constraintEnd_toStartOf="@+id/btnFindPassword"
        android:autofillHints="" />

    <Button
        android:id="@+id/btnFindPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찾기"
        app:layout_constraintBottom_toTopOf="@+id/editTextFindPasswordNickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextFindPasswordNickname"
        app:layout_constraintTop_toTopOf="@+id/editTextFindPasswordNickname" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="7dp"
        android:text="닉네임"
        app:layout_constraintEnd_toStartOf="@+id/editTextFindPasswordNickname"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="7dp"
        android:text="아이디"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextFindPasswordEmail"
        app:layout_constraintEnd_toStartOf="@+id/editTextFindPasswordNickname"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextFindPasswordNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:hint="본인 닉네임"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/btnFindPassword"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <EditText
        android:id="@+id/editTextFindPasswordSecurityNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:ems="10"
        android:hint="인증번호를 입력해주세요"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/btnFindPasswordSecurityNumber"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/editTextFindPasswordNickname" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="9dp"
        android:text="인증번호"
        app:layout_constraintBottom_toBottomOf="@+id/editTextFindPasswordSecurityNumber"
        app:layout_constraintEnd_toStartOf="@+id/editTextFindPasswordSecurityNumber"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFindPasswordSecurityNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="인증 확인"
        app:layout_constraintBaseline_toBaselineOf="@+id/editTextFindPasswordSecurityNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextFindPasswordSecurityNumber" />

</androidx.constraintlayout.widget.ConstraintLayout>